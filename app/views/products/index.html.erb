<h2>all records</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>所属分类</th>
      <th>名称</th>
      <th>副标题</th>
      <th>详情</th>
      <th>价格</th>
      <th>视频</th>
      <th>是否有货</th>
      <th>首页展示？</th>
      <th>状态</th>
      <th>权重</th>
      <th>多图</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p| %>
      <tr>
        <td><span class="label label-success label-sm"><%= p.category.title %></span></td>
        <td><%= p.title %></td>
        <td><%= p.sub_title %></td>
        <td><%= p.description %></td>
        <td><%= p.price %></td>
        <td width=400>
          <div class="embed-responsive embed-responsive-4by3">
            <video controls class="embed-responsive-item" src="<%= p.video %>"></video>
          </div>
        </td>
        <td><%= p.in_stock %></td>
        <td><%= p.index_show %></td>
        <td><%= p.is_hide ? "下架" : "上架" %></td>
        <td><%= p.weight %></td>
        <td>
          <% if p.images.present? %>
            <% p.images.split("&").each do |i| %>
              <%= image_tag i, class: "img-responsive" %>
            <% end %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @posts %>
</div>
