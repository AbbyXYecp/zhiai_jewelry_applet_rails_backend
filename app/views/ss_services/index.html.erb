<legend class="text-center">all</legend>
<%= link_to "new", new_ss_service_path, class: "btn btn-primary" %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>ip</th>
      <th>域名</th>
      <th>剩余数量</th>
      <th>option</th>
    </tr>
  </thead>
  <tbody>
    <% @ss_services.each do |ss| %>
      <tr>
        <td><%= ss.id %></td>
        <td><%= ss.service_ip %></td>
        <td><%= ss.domain %></td>
        <td><%= ss.empty_items.count %></td>
        <td>
          <%= link_to "查看详情", ss, class: "btn btn-danger" %>
          <%= link_to "查看子项", ss_service_ss_items_path(ss.id), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
